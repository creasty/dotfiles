#!/usr/bin/env bash

if ! [ -d ~/dotfiles/.git ]; then
  echo "Cloning repo..."
  cd ~
  git clone --recursive git@github.com:creasty/dotfiles.git
fi

cd ~/dotfiles

sh ./bootstrap.d/install
sh ./bootstrap.d/link
sh ./bootstrap.d/shell
sh ./bootstrap.d/app
sh ./bootstrap.d/font
sh ./bootstrap.d/osx
