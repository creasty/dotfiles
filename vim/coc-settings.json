{
  "coc.preferences.formatOnType": false,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.formatOnSaveFiletypes": ["go"],
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.snippets.enable": false,

  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "∆",
  "diagnostic.infoSign": "▸",
  "diagnostic.hintSign": "▪︎",
  "diagnostic.virtualText": false,

  "suggest.preferCompleteThanJumpPlaceholder": true,

  "list.normalMappings": {
    "<C-j>": "do:defaultaction",
    "<C-c>": "do:exit",
    "/": "do:toggleMode",
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },
  "list.insertMappings": {
    "<C-j>": "do:defaultaction",
    "<C-v>": "eval:@@",
    "<C-c>": "do:exit", // "do:toggleMode"
    "<C-n>": "normal:j",
    "<C-p>": "normal:k",
    "<C-f>": "feedkeys:\\<Right>",
    "<C-b>": "feedkeys:\\<Left>"
  },
  "list.source.diagnostics.defaultOptions": ["--normal", "--no-sort"],

  "javascript.preferences.useAliasesForRenames": false,
  "typescript.preferences.useAliasesForRenames": false,

  "languageserver": {
    "gopls": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["bash"],
      "ignoredRootPaths": ["~"]
    },
    "kotlin": {
      "command": "kotlin-language-server",
      "filetypes": ["kotlin"],
      "rootPatterns": ["gradle.properties"]
    },
    "graphql": {
      "enable": false,
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "rootPatterns": [
        ".graphqlrc",
        ".graphqlrc.yml",
        ".graphql.yaml",
        ".graphqlrc.json",
        "graphql.config.js",
        ".graphqlrc.js"
      ],
      "filetypes": [
        "graphql",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
      ]
    }
  },

  "tabnine.priority": 90,
  "tabnine.disable_filetypes": ["markdown"],

  "diagnostic-languageserver.filetypes": {
    "bash": ["shellcheck"],
    "sh": ["shellcheck"],
    "vim": ["vint"],
    "go": ["golangci-lint"]
  },
  "diagnostic-languageserver.linters": {
    "shellcheck": {
      "command": "shellcheck",
      "debounce": 100,
      "args": ["--format=gcc", "-"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "shellcheck",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
        {
          "line": 1,
          "column": 2,
          "message": 4,
          "security": 3
        }
      ],
      "securities": {
        "error": "error",
        "warning": "warning",
        "note": "info"
      }
    },
    "vint": {
      "command": "vint",
      "debounce": 100,
      "args": ["--enable-neovim", "-"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "vint",
      "formatLines": 1,
      "formatPattern": [
        "[^:]+:(\\d+):(\\d+):\\s*(.*)(\\r|\\n)*$",
        {
          "line": 1,
          "column": 2,
          "message": 3
        }
      ]
    },
    "golangci-lint": {
      "command": "golangci-lint",
      "rootPatterns": [".git", "go.mod"],
      "debounce": 100,
      "args": [
        "run",
        "--out-format",
        "json",
        "--disable",
        "deadcode,unused",
        "%file"
      ],
      "sourceName": "golangci-lint",
      "parseJson": {
        "errorsRoot": "Issues",
        "line": "Pos.Line",
        "column": "Pos.Column",
        "message": "${Text} [${FromLinter}]"
      }
    }
  },

  "cSpell.fixSpellingWithRenameProvider": true,
  "cSpell.enabledLanguageIds": [
    "vim",
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "go",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
