[user]
  name  = Yuki Iwanaga
  email = yuki@creasty.com

[github]
  user = creasty

[core]
  editor       = /usr/local/bin/vim
  excludesfile = ~/.gitignore

[color]
  ui = true

[merge]
  tool = vimdiff
  ff   = false

[diff]
  tool      = vimdiff
  algorithm = histogram

[push]
  default = current

[alias]
  a    = ! git add -A -v `git rev-parse --show-toplevel`
  c    = commit
  cm   = ! git a && git c -m
  ca   = commit --amend
  cam  = commit --amend -m
  cane = commit --amend --no-edit
  ce   = commit --allow-empty -m

  r = remote
  t = tag
  b = branch

  k  = checkout
  kb = checkout-head
  km = checkout master
  kd = checkout develop

  pl = auto-ref pull
  pu = auto-ref push
  sy = aggressive-sync

  s  = status -s
  w  = show --diff-filter=M
  d  = diff --diff-filter=M
  dc = diff --diff-filter=M --cached

  l  = log --oneline
  lg = log --oneline --graph
  ll = ! git log -1 HEAD | cat

  m  = merge
  mf = merge FETCH_HEAD

  st  = stash
  sp  = stash pop
  v   = revert
  p   = cherry-pick
  rb  = rebase
  rbm = rebase master

  sm  = submodule
  smu = submodule update --remote

  f  = flow
  fi = flow init
  fs = flow feature start
  ff = flow feature finish
  fl = flow feature list
  rs = flow release start
  rf = flow release finish
  xs = flow hotfix start
  xf = flow hotfix finish
  xl = flow hotfix list

  res  = reset --soft
  res0 = reset --soft HEAD
  res1 = reset --soft HEAD~
  res2 = reset --soft HEAD~~
  res3 = reset --soft HEAD~~~
  res4 = reset --soft HEAD~~~~
  res5 = reset --soft HEAD~~~~~

  reh  = reset --hard
  reh0 = reset --hard HEAD
  reh1 = reset --hard HEAD~
  reh2 = reset --hard HEAD~~
  reh3 = reset --hard HEAD~~~
  reh4 = reset --hard HEAD~~~~
  reh5 = reset --hard HEAD~~~~~

  # emf: edit modified files
  # ecf: edit conflicted files
  # udf: untrack deleted files
  # dmb: delete merged branches
  emf = ! vim `git status -s | cut -b 4- | grep -v '\\/$' | uniq`
  ecf = ! vim `git ls-files --unmerged | cut -f2 | sort -u`
  udf = ! git rm `git ls-files --deleted | cut -f2 | sort -u`
  dmb = ! git branch --merged | grep -v \\* | grep -v master | xargs -n 1 git branch -d

  # reload config
  rc = ! git config -l > /dev/null

  g  = github
  pr = github mk-pr
  wr = browse-remote

[url "https://"]
  insteadOf = git://

[issue]
  type = github

[web]
  browser = google-chrome

[browse-remote "github.com"]
  top = https://{host}/{path}
  ref = https://{host}/{path}/tree/{short_ref}
  rev = https://{host}/{path}/commit/{commit}
