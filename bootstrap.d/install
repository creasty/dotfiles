#!/usr/bin/env bash

cd $DOTFILES_PATH
source $DOTFILES_PATH/lib/helpers.sh

INSTALLERS_PATH=$DOTFILES_PATH/bootstrap.d/install.d

INSTALLERS=(
  vim

  xcode_cli
  homebrew
  anyenv

  ruby
  nodejs
  vagrant
  r
  haskell
  lua
  python
  golang
  java

  redis
  rsense
)

for installer in "${INSTALLERS[@]}"; do
  (source "$INSTALLERS_PATH/${installer}.sh")
done
