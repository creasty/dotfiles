require 'rubygems' unless defined? Gem
require 'hirb'
require 'interactive_editor'
require 'fancy_irb'
require 'awesome_print'

FancyIrb.start(
  :rocket_mode => false,
  :colorize => {
    :rocket_prompt => [:blue],
    :result_prompt => [:blue],
    :input_prompt  => nil,
    :irb_errors    => [:red],
    :stderr        => [:red, :bright],
    :stdout        => [:white],
    :input         => nil,
    :output        => true,
  },
  :result_proc => proc { |context|
    context.last_value.awesome_inspect
  },
  east_asian_width: true
)

Hirb.enable
# AwesomePrint.irb!
