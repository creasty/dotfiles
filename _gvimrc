
" fonts
set guifont=Monaco:h10

" maximize window
set lines=999 columns=9999

" hide menu & toolbars
set guioptions-=T
set guioptions-=m

" hide scrollbars
set guioptions-=r
set guioptions-=l
set guioptions-=b
set guioptions-=L
set guioptions-=R

" make tabs more readable
set guitablabel=%N\ %t%M

" send print jobs to Preview.app
set printexpr=system('open\ -a\ Preview\ '.v:fname_in)\ +\ v:shell_error
