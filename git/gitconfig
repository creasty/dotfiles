[user]
  name  = Yuki Iwanaga
  email = yuki@creasty.com

[github]
  user = creasty
  privatekey = ~/.ssh/keys/github

[core]
  editor       = /usr/local/bin/vim
  excludesfile = ~/.gitignore

[color]
  ui = true

[merge]
  tool = vimdiff
  ff   = false

[diff]
  indentHeuristic = true

[push]
  default = current

[alias]
  a    = smart-add
  ap   = add -p
  c    = commit
  cm   = commit -m
  ca   = commit --amend
  cam  = commit --amend -m
  cane = commit --amend --no-edit
  ce   = commit --allow-empty -m

  # Temporarily ignoring files
  # @see http://gitready.com/intermediate/2009/02/18/temporarily-ignoring-files.html
  au  = update-index --assume-unchanged
  nau = update-index --no-assume-unchanged

  r   = remote
  ra  = remote add
  ru  = remote set-url
  ruo = remote set-url origin

  t  = tag
  b  = branch
  bd = branch -D
  bm = branch -m

  k  = checkout
  kb = checkout-head
  km = checkout master
  kd = checkout develop

  fe  = fetch
  fo  = fetch origin
  fok = checkout-origin

  pl = auto-ref pull
  pu = auto-ref push
  pr = github-compare
  y  = deploy

  s  = status -s
  w  = show --diff-filter=M
  d  = diff --diff-filter=M
  dc = diff --diff-filter=M --cached
  ds = diff --stat master HEAD

  l  = log --oneline
  lg = log --oneline --graph
  ll = ! git --no-pager log -1 HEAD

  st = stash
  sp = stash pop
  v  = revert --no-edit
  p  = cherry-pick

  m   = merge
  mf  = merge FETCH_HEAD
  rb  = rebase
  rbm = rebase master

  sm  = submodule
  smu = submodule update --remote

  res  = reset --soft
  res0 = reset --soft HEAD
  res1 = reset --soft HEAD~
  res2 = reset --soft HEAD~~
  res3 = reset --soft HEAD~~~
  res4 = reset --soft HEAD~~~~
  res5 = reset --soft HEAD~~~~~

  reh  = reset --hard
  reh0 = reset --hard HEAD
  reh1 = reset --hard HEAD~
  reh2 = reset --hard HEAD~~
  reh3 = reset --hard HEAD~~~
  reh4 = reset --hard HEAD~~~~
  reh5 = reset --hard HEAD~~~~~

  # emf: edit modified files
  # ecf: edit conflicted files
  # udf: untrack deleted files
  # dmb: delete merged branches
  emf = ! vim -p `git status -s | cut -b 4- | grep -v '\\/$' | uniq`
  ecf = ! vim -p `git ls-files --unmerged | cut -f2 | sort -u`
  udf = ! git rm `git ls-files --deleted | cut -f2 | sort -u`
  dmb = ! git branch --merged | grep -v \\* | grep -v master | xargs -n 1 git branch -d

[issue]
  type = github

[web]
  browser = google-chrome

[browse-remote "github.com"]
  top = https://{host}/{path}
  ref = https://{host}/{path}/tree/{short_ref}
  rev = https://{host}/{path}/commit/{commit}

[url "git@github.com:"]
  insteadOf = https://github.com/
  insteadOf = git://github.com/

[ghq]
  root = ~/go/src
