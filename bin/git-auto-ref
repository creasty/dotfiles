#!/usr/bin/env bash

set -eu
set -o pipefail

# one of:
#
# `remote:`
# `remote:branch`
# `:branch`
# `branch`
REMOTE=''
BRANCH=''
DEFAULT_REMOTE=origin
DEFAULT_BRANCH=$(git symbolic-ref --short HEAD)

OPTS=('')
SUB_COMMAND="$1"

for a in "${@:2}"; do
  case "$a" in
    -*)
      OPTS=("${OPTS[@]}" "$a")
      ;;
    m)
      BRANCH='master'
      if git branch | grep -w main > /dev/null; then
        BRANCH='main'
      fi
      ;;
    d)
      BRANCH='develop'
      ;;
    *:*)
      REMOTE="${a%%:*}"
      BRANCH="${a#*:}"
      ;;
    *)
      BRANCH="$a"
  esac
done

if [ "$SUB_COMMAND" = 'pull' ] && [ -z "$BRANCH" ]; then
  OPTS=("${OPTS[@]}" '--ff')

  if [[ "$DEFAULT_BRANCH" =~ master|main|develop ]]; then
    OPTS=("${OPTS[@]}" '--ff-only')
  fi
fi

: ${REMOTE:="$DEFAULT_REMOTE"}
: ${BRANCH:="$DEFAULT_BRANCH"}

COMMAND=(git)
COMMAND=(${COMMAND[@]} $SUB_COMMAND)
COMMAND=(${COMMAND[@]} ${OPTS[@]})
COMMAND=(${COMMAND[@]} $REMOTE)
COMMAND=(${COMMAND[@]} $BRANCH)

echo "${COMMAND[@]}"
${COMMAND[@]}
