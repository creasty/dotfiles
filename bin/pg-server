#!/usr/bin/env bash
#> pg-server <command>
#>
#> COMMANDS:
#>     pg_server start
#>     pg_server stop
#>     pg_server destroy
#>     pg_server psql
#>     pg_server createdb $dbname

set -eu
set -o pipefail

__FILE__="$(dirname $0)/$(basename $0)"

NAME=global_postgres
IMAGE=postgres:9.6.1-alpine


#  Utils
#-----------------------------------------------
do_help() {
  cat "$__FILE__" \
    | grep '^#>' \
    | sed -e 's/#> //g' -e 's/#>//g'
  exit 0
}


#  Commands
#-----------------------------------------------
server_stop() {
  echo "==> Stopping server"
  docker stop $NAME 2> /dev/null || true
}

server_start() {
  echo "==> Starting server"
  docker start $NAME 2> /dev/null || server_run
}

server_destory() {
  echo "==> Destroying server"
  docker rm $NAME 2> /dev/null || true
}

server_create() {
  echo "==> Creating server"
  docker run \
    -p 5432:5432 \
    --name $NAME \
    -e POSTGRES_USER=$USER \
    -e POSTGRES_PASSWORD= \
    -v ~/docker/postgres:/var/lib/postgresql/data \
    -d \
    $IMAGE
}

exec_psql() {
  docker exec -it $NAME psql --username=postgres
}

exec_createdb() {
  docker exec -it $NAME createdb --username=postgres "$1"
}


#  Entrypoint
#-----------------------------------------------
COMMAND="${1:-}"
shift || true

case "$COMMAND" in
  start)
    server_start
    ;;
  stop)
    server_stop
    ;;
  destroy)
    server_destory
    ;;
  psql)
    exec_psql
    ;;
  createdb)
    exec_createdb "$1"
    ;;
  *)
    do_help
    ;;
esac
