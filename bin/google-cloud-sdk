#!/usr/bin/env bash

set -eu
set -o pipefail

docker run \
  --rm \
  -it \
  -w /workdir \
  -v "$(pwd)":/workdir \
  -v $HOME/.config/gcloud:/.config/gcloud \
  -v $HOME/.kube:/.kube \
  -e "K8S_SERVER=${K8S_SERVER:-}" \
  -e "K8S_TOKEN=${K8S_TOKEN:-}" \
  -e "TZ=$(readlink /etc/localtime | sed 's!^.*zoneinfo/!!')" \
  google/cloud-sdk:latest \
  "$@"
