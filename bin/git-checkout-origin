#!/usr/bin/env bash

set -eu
set -o pipefail

BRANCH="$1"

section() {
  printf "\e[33m==> $1\e[0m\n"
}

section "git fetch"
git fetch origin "$BRANCH"

section "git checkout"
git checkout "$BRANCH"

if [ "$(git rev-parse HEAD)" != "$(git rev-parse '@{u}')" ]; then
  section "git pull"
  git pull --ff origin "$BRANCH"
fi
