#!/bin/bash

DEFAULT_REMOTE=origin
DEFAULT_BRANCH=$(git symbolic-ref --short HEAD)

source ~/dotfiles/script/helpers.sh

if [ $# -ge 2 ]; then
  subsection "git pull ${1:-$DEFAULT_REMOTE} ${2:-$DEFAULT_BRANCH}"
  git pull ${1:-$DEFAULT_REMOTE} ${2:-$DEFAULT_BRANCH}
else
  subsection "git pull $DEFAULT_REMOTE ${1:-$DEFAULT_BRANCH}"
  git pull $DEFAULT_REMOTE ${1:-$DEFAULT_BRANCH}
fi
