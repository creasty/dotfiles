#!/bin/bash

DEFAULT_REMOTE=origin
DEFAULT_BRANCH=$(git symbolic-ref --short HEAD)

source ~/dotfiles/script/helpers.sh

if [ $# -ge 2 ]; then
  CMD="git push ${1:-$DEFAULT_REMOTE} ${2:-$DEFAULT_BRANCH}"

  subsection "$CMD"
  exec "$CMD"
else
  CMD="git push $DEFAULT_REMOTE ${1:-$DEFAULT_BRANCH}"

  subsection "$CMD"
  exec "$CMD"
fi
