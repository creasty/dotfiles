#!/usr/bin/env bash

DEFAULT_REMOTE=origin
DEFAULT_BRANCH=$(git symbolic-ref --short HEAD)

source ~/dotfiles/lib/helpers.sh

if [ $# -ge 2 ]; then
  subsection "git push ${1:-$DEFAULT_REMOTE} ${2:-$DEFAULT_BRANCH}"
  git push ${1:-$DEFAULT_REMOTE} ${2:-$DEFAULT_BRANCH}
else
  subsection "git push $DEFAULT_REMOTE ${1:-$DEFAULT_BRANCH}"
  git push $DEFAULT_REMOTE ${1:-$DEFAULT_BRANCH}
fi
