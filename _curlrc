# limit the time the connection to the server is allowed to take
connect-timeout = 30

# limit the time (in seconds) the whole operation is allowed to take
max-time = 60

# follow redirects
location

# set the previous URL as referer when following a redirect
referer = ";auto"

# show error messages
show-error

# send a fake UA string
user-agent = "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_9_4) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/37.0.2062.94 Safari/537.36"
